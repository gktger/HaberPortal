
@{
    Layout = null;
}
@model IEnumerable<HaberPortal.Entity.Haber>

@helper BaslikBelirle(string baslik)
{
    if (baslik.Length > 25)
    {
        <marquee>@baslik</marquee>
    }
}
<aside id="block_front_slider" class="block">
    <div class="content ad-gallery">
        <div class="ad-image-wrapper"></div>
        <div class="ad-controls"></div>
        <div class="ad-nav">
            <div class="ad-thumbs">
                <ul class="ad-thumb-list">
                    @foreach (var haber in Model)
                    {
                        <li>
                            <a href="@haber.ResimYol">
                                <img src="@haber.KucukResimYol" title="@BaslikBelirle(haber.Baslik)" alt="@haber.Ozet.Substring(0,100) ..." />


                            </a>
                        </li>
                    }



                </ul>
            </div>
        </div>
    </div>
</aside>